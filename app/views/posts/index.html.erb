<div class="flex flex-col w-full">
  <div class="flex-1 w-1/2">
    <%= form_for @post do |f| %>
      <div class="flex flex-col">
        <div class="flex flex-col gap-y-1">
          <%= f.label :title %>
          <%= f.text_field :title, class: "border border-gray-300 rounded-md p-2 focus:ring focus:ring-sky-500" %>
        </div>
        <div class="flex flex-col gap-y-1">
          <%= f.label :description %>
          <%= f.text_field :description, class: "border border-gray-300 rounded-md p-2 focus:ring focus:ring-sky-500" %>
        </div>
        <div class="flex flex-col gap-y-1">
          <%= f.label :body %>
          <%= f.text_area :body, class: "border border-gray-300 rounded-md p-2 focus:ring focus:ring-sky-500" %>
        </div>
        <div class="flex justify-end pt-2">
          <button type="submit" class="bg-sky-500/100 p-4 cursor-pointer rounded-md">
            Submit
          </button>
        </div>
      </div>
    <% end %>
  </div>
  <div class="flex w-full pt-2">
    <%= render partial: "posts/table", locals: { posts: @posts } %>
  </div>
</div>
